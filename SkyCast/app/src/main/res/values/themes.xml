<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base app theme -->
    <style name="Base.Theme.SkyCast" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Transparent status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">#47BFDF</item>

    </style>

    <!-- App theme -->
    <style name="Theme.SkyCast" parent="Base.Theme.SkyCast" />

    <!-- Optional: AppBarOverlay theme -->
    <style name="Theme.SkyCast.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <!-- Optional: Popup menu theme -->
    <style name="Theme.SkyCast.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

</resources>
